<html>
<head>{% spaceless %}
{% if request.mobile %}<meta name="viewport" content="width=320; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;"/>{% endif %}
{% endspaceless %}
<link rel="stylesheet" type="text/css" href="{{ MEDIA_URL }}css/default.css" />
<link rel="stylesheet" type="text/css" href="{{ MEDIA_URL }}admin/css/forms.css" />
<script type="text/javascript" src="{{ MEDIA_URL }}js/jquery.js"></script>
{% spaceless %}{% if request.mobile %}<link rel="stylesheet" type="text/css" href="{{ MEDIA_URL }}css/iphone.css" />{% endif %}
{% block head %}{% endblock %}
{% endspaceless %}
</head>
<body>
	<div id="wrap">
	<div id="header" class="clearfix">
	<a href="{{ request.META.SCRIPT_NAME }}/"><img src="{{ MEDIA_URL }}img/cndls.png" /></a>
	</div>
	
	<div id="title">
	<p id="breadcrumb"></p>
	<h1>Administrative database</h1>
	</div>

	<div id="content">
	<div id="login">
	<form action="{{ app_path }}" method="post" id="login-form">{% csrf_token %}
  	<p>
    	<label for="id_username">Username</label> <input type="text" name="username" id="id_username" />
  	</p>
  	<p>
    	<label for="id_password">Password</label> <input type="password" name="password" id="id_password" />
    	<input type="hidden" name="this_is_the_login_form" value="1" />
  	</p>
  	<p>
    	<label>&nbsp;</label><input type="submit" value="Log in" />
  	</p>
	</form>
	</div>
	
<script type="text/javascript">
document.getElementById('id_username').focus()
</script>
</div>
	
	<div id="footer"></div>
	</div>
</body>	
</html>	
